<Window x:Class="ExDesign.Windows.SoilTypeLibrary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExDesign.Windows"
        mc:Ignorable="d"
        Title="{DynamicResource SoilTypeLibrary}" Height="600" Width="800" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="UserSoilList" Width="230" Height="180" VerticalAlignment="Top" HorizontalAlignment="Center"  Margin="0,35,0,0" />
            <ListBox x:Name="LibrarySoilList" Width="230" Height="180" VerticalAlignment="Top" HorizontalAlignment="Center"  Margin="0,245,0,0" />
            <Button Grid.Row="0" Grid.Column="0" x:Name="addnew_button" Content="{DynamicResource addnew}"  Margin="10,10,10,0" VerticalAlignment="Top"  />
            <Button Grid.Row="0" x:Name="delete_button" Content="{DynamicResource delete}"  Margin="10,220,10,0" VerticalAlignment="Top"  />
            <Button Grid.Row="1" x:Name="AddCopyFromLibrary_button" Content="{DynamicResource AddCopyFromLibrary}"  Margin="5" VerticalAlignment="Top"   />
            <DockPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">
                <Button x:Name="save_close_button" Content="{DynamicResource SaveAndClose}"  Width="90"   Margin="5" />
                <Button x:Name="save_button" Content="{DynamicResource Save}"  Width="50" Margin="5"  />
                <Button x:Name="cancel_button" Content="{DynamicResource Cancel}"  Width="50" Margin="5"  />
            </DockPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,10,10,0" >
                <DockPanel  HorizontalAlignment="Left" >
                    <Label  Content="{DynamicResource name}" Width="80"/>
                    <Label  Content=":" Width="30" HorizontalContentAlignment="Right"/>
                    <TextBox x:Name="soilname" MaxLength="30" Width="200" Margin="2"  />
                </DockPanel>
                <DockPanel  HorizontalAlignment="Left" >
                    <Label  Content="{DynamicResource Height}" Width="80"/>
                    <Label  Content="(H):" Width="30" HorizontalContentAlignment="Right"/>
                    <TextBox x:Name="sheetheight" Width="120" Margin="2"  />
                    <Label x:Name="sheetheight_unit" Content="m" Width="50" HorizontalContentAlignment="Left"/>
                </DockPanel>    

            </StackPanel>
        </Grid>
    </Grid>
</Window>
