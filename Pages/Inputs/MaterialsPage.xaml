<Page x:Class="SoilPro.Pages.Inputs.MaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoilPro.Pages.Inputs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="view3d_main" Grid.Column="0" NavigationUIVisibility="Hidden"/>
            <Frame x:Name="sideview_main" Grid.Column="1" NavigationUIVisibility="Hidden"/>

        </Grid>
        <StackPanel Grid.Row="1" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1">
                    <GroupBox Margin="5" Header="{DynamicResource ConcreteWall}">
                        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" >
                            <Label Width="100" Content="{DynamicResource wallheight}"/>
                            <Label Width="30" Content="(h):"/>
                            <TextBox x:Name="concretewall_height" Width="100" TextChanged="concretewall_height_TextChanged" DataObject.Pasting="TextBoxPasting" PreviewTextInput="concretewall_height_PreviewTextInput"/>
                            <Label x:Name="concretewall_height_unit" Width="30" Content="m"/>
                        </DockPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
