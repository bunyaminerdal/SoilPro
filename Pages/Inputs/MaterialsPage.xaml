<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoilPro.Pages.Inputs"
      xmlns:Views="clr-namespace:SoilPro.Pages.Inputs.Views" x:Class="SoilPro.Pages.Inputs.MaterialsPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialsPage" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="view3d_main" Grid.Column="0" NavigationUIVisibility="Hidden"/>
            <Frame x:Name="sideview_main" Grid.Column="1" NavigationUIVisibility="Hidden"/>

        </Grid>
        <StackPanel Grid.Row="1" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1">
                    <GroupBox Margin="5" Header="{DynamicResource ConcreteWall}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="27"/>
                                <RowDefinition Height="27"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" >
                                <Label Width="100" Content="{DynamicResource wallheight}"/>
                                <Label Width="30" Content="(h):"/>
                                <TextBox x:Name="concretewall_height" Height="22" Width="80" TextChanged="concretewall_height_TextChanged"  PreviewTextInput="concretewall_height_PreviewTextInput" PreviewKeyDown="concretewall_height_PreviewKeyDown"/>
                                <Label x:Name="concretewall_height_unit" Width="30" Content="cm"/>
                            </DockPanel>
                            
                            <DockPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" >
                                <Label Width="100" Content="{DynamicResource wallthickness}"/>
                                <Label Width="30" Content="(t):"/>
                                <TextBox x:Name="concretewall_thickness" Height="22" Width="80" TextChanged="concretewall_thickness_TextChanged" PreviewTextInput="concretewall_thickness_PreviewTextInput" PreviewKeyDown="concretewall_thickness_PreviewKeyDown"     />
                                <Label x:Name="concretewall_thickness_unit" Width="30" Content="cm"/>
                            </DockPanel>
                            
                        </Grid>

                        
                    </GroupBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
    
</Page>
