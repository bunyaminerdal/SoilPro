<Page x:Class="ExDesign.Pages.Inputs.Views.View3dPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExDesign.Pages.Inputs.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="view3dPage">

    <Grid Background="White" MouseWheel="viewport3d_main_MouseWheel" MouseDown="viewport3d_main_MouseDown" MouseUp="viewport3d_main_MouseUp" MouseMove="viewport3d_main_MouseMove" MouseLeave="viewport3d_main_MouseLeave">
        <ContentControl Name="contentControl2">
            <Border BorderBrush="Black" BorderThickness="1">
                <Viewport3D x:Name="viewport3d_main" ClipToBounds="True" Width="Auto" Height="Auto" />

            </Border>

        </ContentControl>
        <Label x:Name="scroll_3dview" Content="adfasdf"></Label>
        <Button x:Name="Position_Reset_bttn" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Click="Position_Reset_bttn_Click">
            <Image Source="/Textures/Icons/arrows-fullscreen.png" />
        </Button>
    </Grid>
</Page>
